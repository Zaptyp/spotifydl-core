{
  "compilerOptions": {
    "target": "es2024",
    "module": "nodenext",
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}
